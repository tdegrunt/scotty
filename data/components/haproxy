name "HA-Proxy"

provides %w(haproxy)

detect "/usr/sbin/haproxy"

test { assert_stdout "haproxy -v", "HA-Proxy" }

install do
  apt_install "haproxy"
end

remove do
  exec "aptitude remove -y haproxy"
end


